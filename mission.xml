<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<Mission xmlns="http://ProjectMalmo.microsoft.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <About>
        <Summary>Monster Killer</Summary>
    </About>

    <ServerSection>
        <ServerInitialConditions>
            <Time>
                <StartTime>6000</StartTime>
                <AllowPassageOfTime>false</AllowPassageOfTime>
            </Time>
            <Weather>clear</Weather>
            <AllowSpawning>true</AllowSpawning>
        </ServerInitialConditions>
        <ServerHandlers>
            <FlatWorldGenerator generatorString="3;7,220*1,5*3,2;3;,biome_1"/>
            <DrawingDecorator>
                <DrawCuboid type="bedrock" x1="15" y1="230" z1="20" x2="36" y2="240" z2="41"/>
                <DrawCuboid type="air" x1="16" y1="231" z1="21" x2="35" y2="240" z2="39"/>
                <DrawEntity type="Pig" x="25.5" y="231" z="35"/>
            </DrawingDecorator>  
            <ServerQuitFromTimeUp description="" timeLimitMs="0"/>
            <ServerQuitWhenAnyAgentFinishes/>
        </ServerHandlers>
    </ServerSection>

    <AgentSection mode="Survival">
        <Name>Monster Killer</Name>
        <AgentStart>
            <Placement pitch="0" x="25.5" y="231" yaw="0" z="25"/>
            <Inventory>
                <InventoryItem slot="0" type="bow"/>
                <InventoryItem slot="1" type="wooden_sword"/>
                <InventoryItem slot="2" type="iron_sword"/>
                <InventoryItem slot="3" type="golden_sword"/>
                <InventoryItem slot="4" type="diamond_sword"/>
                <InventoryItem slot="9" type="arrow" quantity="20"/>
                <InventoryItem slot="10" type="arrow" quantity="20"/>
                <InventoryItem slot="11" type="arrow" quantity="20"/>
                <InventoryItem slot="12" type="arrow" quantity="20"/>
                <InventoryItem slot="13" type="arrow" quantity="20"/>
            </Inventory>
        </AgentStart>
        <AgentHandlers>
            <ContinuousMovementCommands turnSpeedDegs="180"/>
            <ObservationFromFullStats/>
            <VideoProducer want_depth="false" viewpoint="0">
                <Width>800</Width>
                <Height>500</Height>
            </VideoProducer>
        </AgentHandlers>
    </AgentSection>

</Mission>
